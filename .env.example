# Yellowknife Grocery Tracker - Environment Variables
# Copy this file to .env and update values as needed

# === Flask Application Settings ===
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
FLASK_ENV=production

# === Database Configuration ===
# For local development, SQLite database path
DATABASE_PATH=grocery_prices.db
# Railway automatically provides DATABASE_URL for PostgreSQL

# === Price Scraping Configuration ===
SCRAPING_ENABLED=True
SCRAPING_INTERVAL_HOURS=6
USE_DEMO_DATA=True

# === Railway Deployment Variables ===
# These are automatically set by Railway - do not set manually
# PORT=5000                    # Application port (Railway sets this)
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=your-project-id
# RAILWAY_SERVICE_ID=your-service-id
# DATABASE_URL=postgresql://... # Railway provides this for PostgreSQL

# === Optional Customization ===
# APP_NAME=Yellowknife Grocery Tracker
# TIMEZONE=America/Edmonton